<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Insidence" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary_dark</item>
        <item name="colorSecondaryVariant">@color/accent</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Insidence.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">#fff</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.Insidence.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">#fff</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>